<div class="container"></div>

<div class="row">
  <div class="col-sm-12 text-center text-light pb-3">
    <h1>Eat-Da-Burger!</h1>
  </div>
</div>


<div class="row text-light">
  <div class="col-sm-1"></div>
  <div class="col-sm-5">
    <h5 class="text-center border-bottom border-warning pb-2 mb-2">Burgers Up!</h5>
      {{#each burgers}}
          {{> burger-block_Undevoured }}
      {{/each}}
  </div>
  <div class="col-sm-5">
    <h5 class="text-center border-bottom border-warning pb-2 mb-3">Burgers Devoured!</h5>
    <ul>
      {{#each burgers}}
        {{> burger-block_Devoured }}
      {{/each}}
    </ul>
  </div>
  <div class="col-sm-1"></div>
</div>


<div class="row">
  <div class="col-sm-1">
  </div>
  <div class="col-sm-10 pt-3 text-center text-light">
    <h3>Add a Burger!</h3>
    <form class="create-form">
      <div class="form-group">
        {{!-- TODO: is this better named 'burger_name'? --}}
        {{!-- <label for="nb">Burger Name:</label> --}}
        <input type="text" id="nb" name="name">
      </div>
      {{!-- <br> --}}
      <button type="submit" class="btn btn-success">Get Grilling!</button>
    </form>
  </div>
  <div class="col-sm-1">
  </div>
</div>
